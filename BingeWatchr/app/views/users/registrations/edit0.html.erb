<h1> Editar cuenta asociada </h1>
<% if current_user.id == @user.parent_id or current_user.admin%>

  <%= form_tag("/users/edit_user", method: "post") do %>
    <%= @user.email %>

    <%= label_tag(:password, "Password hijo") %>
    <%= password_field_tag(:password) %>


    <%= hidden_field_tag(:id, @user.id) %>
    <%= hidden_field_tag(:email, @user.email) %>
    <%= hidden_field_tag(:parent_id, @user.parent_id) %>



    <%= submit_tag("Crear hijo") %>


  <% end %>

  <%= form_tag("/users/delete_user", method: "post") do %>

  <%= hidden_field_tag(:id, @user.id) %>
  <%= submit_tag("Borrar cuenta asociada") %>


  <% end %>

<%else%>

503 Not Authorized

<%end%>
