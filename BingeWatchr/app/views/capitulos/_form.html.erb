<%= simple_form_for(@capitulo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :episode %>
    <%= f.input :season %>
    <%= f.association :serie %>
    <%= f.input :description%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
