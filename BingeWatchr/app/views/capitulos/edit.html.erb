<h1>Editing Capitulo</h1>

    <%= simple_form_for(@capitulo) do |f| %>


          <%= f.input :title %>
          <%= f.input :episode %>
          <%= f.input :season %>
          <%= f.association :serie %>
          <%= f.input :rating, collection: 1..5, as: :radio_buttons %>
          <%= f.input :seen, as: :check_boxes %>
          <%= f.input :description%>


          <%= f.button :submit %>

    <% end %>

<%= link_to 'Show', @capitulo %> |
<%= link_to 'Back', capitulos_path %>
