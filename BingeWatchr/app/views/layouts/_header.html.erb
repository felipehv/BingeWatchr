<div class="row" style=" max-height: 120px; background-color:#152045; position: fixed; top: 0; width: 100%; " >
  <div align="center" class="col-2" style="vertical-align: middle; background-color:#152045; max-height: 120px">
  <%= link_to image_tag("/images/BingeWatchr.png", alt: "BingeWatchr logo", :style =>  'display:inline-block; width: 30%'), root_path%>
  </div>
  <ul>
    <li><a href="<%= root_path %>">Home</a></li>
    <li><a href='/series'>Series</a></li>
    <% if user_signed_in? %>
    <% if current_page?('/profile') %>
      <li style="float:right"><a class="active" href="<%= destroy_user_session_path %>">Logout</a></li>
    <% else %>
      <li style="float:right"><a class="active" href='/profile'>Perfil</a></li>
    <% end %>
  <% else %>
    <li style="float:right"><a class="active" href="<%= new_user_session_path %>">Login</a></li>
  <% end %>
  </ul>
</div>
<div class="spacer"></div>