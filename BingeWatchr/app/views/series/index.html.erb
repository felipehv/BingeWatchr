<p id="notice"><%= notice %></p>

<head>
  <h1>Series</h1>
</head>

<div class="text-center">
  <%= button_to 'New Series', new_series_path, :method => "get" %>
</div>

<body style="margin: 0px">

  <div class="series">
    <div class="container">
      <div class="cards row">
        <% @series.each do |series| %>
            <div class="card col-xs-12" style="  margin: 0px">
              <% if series.image != nil %>
                <%= link_to image_tag(series.image, :style => "width: 100%"), series_path(series) %>
              <% else %>
                <%= link_to image_tag("/images/BW_placeholder.jpg", :style => "width: 100%"), series_path(series) %>
              <% end %>
              <h1><%= series.name %></h1>

            </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
