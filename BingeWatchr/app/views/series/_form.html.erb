<%= simple_form_for(@series, :url => create_new_series_url, :id  => @series.id, :method => :post) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :year %>
    <%= f.hidden_field :user_id, :value => @uid %>
    <%= f.collection_select :tipo_id, Tipo.all, :id, :name , { :prompt => 'Selecciona un tipo' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>